.hero-overlay
  background url("images/home_bg.png") no-repeat center 100%;
  background-size: cover
  position relative
  pointer-events:  none
  &::before 
    pointer-events:  none
    position absolute
    width 100%
    height 100%
    content ''
    background transparentify(blackish, 80%)

.hero
  position relative
  z-index 10
  padding 15vh 0
  text-align center
  pointer-events all
  &-content
    max-width 600px
    margin 0 auto
    padding 0 20px
    h1
      font-size 4rem
      color white
      margin-bottom 3.5rem
      line-height 5rem
      letter-spacing .2px
    p
      font-family "Roboto Slab"
      font-size 1.3rem
      color whitish
      margin-bottom 3.5rem
    button
      background: green
      background: linear-gradient(top, green 0%, lighten(green, 30%) 100%)
      padding 20px 30px
      color whitish
      border-width 0
      font-size 0.9rem
      border-radius 35px
      font-weight: 300
      font-family: Montserrat
      text-shadow: 0 1px 1px blackish
      text-transform: uppercase
      &:hover
        cursor pointer
        background: linear-gradient(top, darken(green, 10%) 0%, lighten(green, 20%) 100%)