.portfolio
  sectionWmargin()
  background url('images/tablet.png') no-repeat center right
  &-header
    text-align center
    heading()
  &-small
    small()
    text-align center
  &-content
    margin-top 4rem
    max-width 480px
    &-heading
      text-align left
      margin-bottom 1rem
    &-small
      small(1rem)
      letter-spacing: .3px
  &-list
    margin 2rem 0
    &-item
      position relative
      padding-left 90px
      height 75px
      display flex
      justify-content center
      flex-direction column
      margin 2rem 0
      p
        small(.9rem)
        margin-top .2rem
    &-item:nth-of-type(1)::before
      position absolute
      content url('images/icon1.png')
      transform translateX(-90px)
    &-item:nth-of-type(2)::before
      position absolute
      content url('images/icon2.png')
      transform translateX(-90px)
    &-item:nth-of-type(3)::before
      position absolute
      content url('images/icon3.png')
      transform translateX(-90px)
  &-link-more
    margin-top 2rem
    display block
    color green
    text-decoration: none
    text-transform uppercase
    font-weight: bolder
    &::after
      margin-left 1rem
      content url('images/arrow.png')
    &:hover
      color blackish
      &::after
        content url('images/arrow_black.png')